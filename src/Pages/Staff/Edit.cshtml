@page "{id:int}"
@model Archive.CDManagement.Frontend.Pages.Staff.EditStaffModel
@{
}
@{
    ViewData["Title"] = "Staff Edit Page";
}
<div>
    <h1 class="display-4">Edit Staff</h1>
    <form method="post">
        <div class="form-group">
            <label for="inputId" asp-for="Staff.Id"></label>
            <input id="inputId" class="form-control" asp-for="Staff.Id" disabled>
        </div>

        <div class="form-group">
            <label for="inputTitle">First Name Edit</label>
            <input class="form-control" id="inputTitle" asp-for="Staff.FirstName" aria-describedby="titleHelp">
            <small id="FirstNameeHelp" asp-validation-for="Staff.FirstName"></small>
        </div>
        <div class="form-group">
            <label for="inputAuthor">Last Name Edit</label>
            <input class="form-control" id="inputAuthor" asp-for="Staff.LastName" aria-describedby="authorHelp">
            <small id="LastNameHelp" asp-validation-for="Staff.LastName"></small>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address Edit</label>
            <input class="form-control" id="inputAddress" asp-for="Staff.Address" aria-describedby="addressHelp">
            <small id="AddressHelp" asp-validation-for="Staff.Address"></small>
        </div>
        <div class="form-group">
            <label for="inputemail">Email Edit</label>
            <input class="form-control" id="xSection" asp-for="Staff.Email" aria-describedby="EmailHelp">
            <small id="EmailHelp" asp-validation-for="Staff.Email"></small>
        </div>
        <div class="form-group">
            <label for="inputY">Moblie Number Edit</label>
            <input class="form-control" id="ySection" asp-for="Staff.MobileNumber" aria-describedby="MobileNumberHelp">
            <small id="MobileNumberHelp" asp-validation-for="Staff.MobileNumber"></small>
        </div>
        <div class="form-group">
            <label for="inputIsActive">Is Active?</label>
            <input type="checkbox" id="Active" asp-for="Staff.Active">
        </div>
        <div>
            <input type="submit" />
        </div>
     </form>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
